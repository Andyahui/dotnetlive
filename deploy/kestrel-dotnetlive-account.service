[Unit]
Description=DotNet.Live Account

[Service]
WorkingDirectory=/var/dotnetlive/pubsite/dotnetlive.account
ExecStart=/usr/local/bin/dotnet /var/dotnetlive/pubsite/dotnetlive.account/DotNetLive.AccountWeb.dll
Restart=always
RestartSec=10                                          # Restart service after 10 seconds if dotnet service crashes
SyslogIdentifier=dn-account
User=www-data
Environment=ASPNETCORE_ENVIRONMENT=Production
Environment=ASPNETCORE_URLS=http://127.0.0.1:8003

[Install]
WantedBy=multi-user.target

